json = {
  meta: {
    current_page: @task_likes.current_page,
    total_pages: @task_likes.total_pages,
    count: @task_likes.count
  }
}

json[:data] = @task_likes.map do |like|
  v = {
    uuid: like.uuid,
    created_at: like.created_at,

    user: {
      uuid: like.user.uuid,
      username: like.user.username,
      first_name: like.user.first_name,
      last_name: like.user.last_name,
      streak: like.user.streak
    }
  }

  v
end

json
